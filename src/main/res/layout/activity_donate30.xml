<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Donate30">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/donate_rs30"
        android:contentDescription="@string/donate_rs30" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate_30_text"
        android:fontFamily="@font/andika_new_basic"
        android:textSize="17sp"
        android:layout_margin="20dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="6dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:background="@drawable/result_box_background"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/made_in_india_made_with_love"
        android:fontFamily="@font/andika_new_basic"
        android:textColor="#808080"
        android:textSize="15sp"
        android:layout_marginVertical="20dp"
        android:paddingBottom="8dp"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        />

</LinearLayout>